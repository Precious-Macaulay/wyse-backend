# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/wyse
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/wyse

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Email Configuration (for OTP)
# Option 1: Gmail (Production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Wyse <noreply@wyse.com>

# Option 2: Ethereal Email (Development Testing)
# EMAIL_HOST=smtp.ethereal.email
# EMAIL_PORT=587
# EMAIL_USER=your-ethereal-username
# EMAIL_PASS=your-ethereal-password
# EMAIL_FROM=Wyse <noreply@wyse.com>

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Security
BCRYPT_ROUNDS=12
OTP_EXPIRY_MINUTES=10

# Mono API Configuration
MONO_SECRET_KEY=your-mono-secret-key-here
MONO_TX_MAX_PAGES=10

# MindsDB Configuration
MINDSDB_HOST=localhost
MINDSDB_PORT=47334
MINDSDB_USER=mindsdb
MINDSDB_PASSWORD=
MINDSDB_DEFAULT_ENGINE=openai

# OpenAI Configuration (for MindsDB Knowledge Base)
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini Configuration (alternative to OpenAI)
GEMINI_API_KEY=your-gemini-api-key-here 